<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/food_card"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp">

    <TextView
        android:id="@+id/food_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:padding="6sp"
        android:text="@string/bebas_info"
        android:textColor="#6665DD"
        android:textSize="12sp"
        app:fontFamily="@font/passion_one"
        app:layout_constraintTop_toBottomOf="@id/text_booking"/>

    <TextView
        android:id="@+id/food_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:gravity="top|center"
        android:padding="8dp"
        android:text="@string/bebas_greek"
        android:textColor="#27233A"
        android:textSize="14sp"
        app:fontFamily="@font/passion_one" />

    <Button
        android:id="@+id/book_button"
        android:layout_width="100sp"
        android:layout_height="45sp"
        android:layout_marginTop="2sp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|bottom"
        android:text="@string/availability"
        android:textSize="10sp"
        android:textColor="#6665DD"
        app:backgroundTint="#E3E2FF"
        app:fontFamily="@font/passero_one"
        android:clickable="true"/>


</androidx.cardview.widget.CardView>