<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/food_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodFragment">




    <LinearLayout
        android:id="@+id/food_card_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/bebas_selection"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="230dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_bebas_selection" />

    </LinearLayout>

    <ImageView
        android:id="@+id/food_bottom_stills"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_food_bottom_stills" />

    <Button
        android:id="@+id/food_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="110dp"
        android:layout_weight="1"
        android:backgroundTint="#6665dd"
        android:text="Search"
        android:textColor="#FFFF"
        app:cornerRadius="20dp"
        app:fontFamily="@font/passero_one"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/food_top_stills"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="420dp"
        android:src="@drawable/ic_food_top_stills" />

    <ImageView
        android:id="@+id/pick_for_me_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="165dp"
        android:src="@drawable/ic_pick_for_me_arrow" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/food_gallery"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_above="@+id/pick_for_me"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/pick_for_me_layout"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/food_items" >

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/pick_for_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="160dp"
        android:text="Pick For Me!"
        android:textSize="20sp"
        app:backgroundTint="#6665DD"
        app:fontFamily="@font/passero_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/pick_for_me_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pizza_hut"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="190dp"
            android:layout_marginTop="520dp"
            android:text="Pizza Hut"
            android:textColor="#27233A"
            android:textSize="30sp"
            app:fontFamily="@font/passion_one" />

        <ImageView
            android:id="@+id/pizza_hut_logo"
            android:layout_width="62dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="510dp"
            android:layout_marginBottom="250dp"
            android:src="@drawable/pizza_hut_logo" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/distance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="130dp"
        android:layout_weight="1"
        android:background="@null"
        android:contentDescription="@string/food"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_distance_button" />

    <ImageButton
        android:id="@+id/friendly_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="130dp"
        android:layout_weight="1"
        android:background="@null"
        android:contentDescription="@string/food"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_fun_button" />

    <ImageButton
        android:id="@+id/wait_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="130dp"
        android:layout_weight="1"
        android:background="@null"
        android:contentDescription="@string/food"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_wait_button" />

    <ImageButton
        android:id="@+id/price_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="130dp"
        android:layout_weight="1"
        android:background="@null"
        android:contentDescription="@string/food"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_price_button" />

    <ImageButton
        android:id="@+id/star_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="195dp"
        android:layout_marginTop="130dp"
        android:layout_weight="1"
        android:background="@null"
        android:contentDescription="@string/food"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_star_button" />

    <ImageButton
        android:id="@+id/review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="130dp"
        android:layout_weight="1"
        android:background="@null"
        android:contentDescription="@string/food"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_review_button" />

</RelativeLayout>

