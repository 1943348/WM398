<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AppPage">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toggle_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="14dp"
            android:layout_gravity="start"
            android:background="#FFFF"
            android:src="@drawable/settings_btn" />

        <ImageView
            android:id="@+id/toggle_button_faqs"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="13dp"
            android:layout_gravity="end"
            android:background="#FFFF"
            android:src="@drawable/faqs_btn"
            app:layout_constraintEnd_toEndOf="parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_container_daily_recs"
        android:layout_width="match_parent"
        android:layout_marginTop="140dp"
        android:layout_height="250dp">

    </FrameLayout>

    <ImageView
        android:id="@+id/welcome_logo"
        android:layout_width="199dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="121dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/compact_logo" />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        app:cnb_iconSize="50dp"
        app:cnb_menuResource="@menu/bottom_nav_menu" />

</RelativeLayout>