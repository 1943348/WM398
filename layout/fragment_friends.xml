<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsFragment">

    <ImageView
        android:id="@+id/misha_stills"
        android:layout_width="410dp"
        android:layout_height="226dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="220dp"
        android:src="@drawable/ic_misha_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fan_favs"
        android:layout_width="327dp"
        android:layout_height="195dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="42dp"
        android:src="@drawable/fan_favs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/all_friends"
        android:layout_width="490dp"
        android:layout_height="169dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/ic_all_friends_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_friend_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="110dp"
        android:layout_weight="1"
        android:backgroundTint="#FF92C2"
        android:text="Add Friend"
        app:cornerRadius="20dp"
        app:fontFamily="@font/passero_one"
        app:layout_constraintBottom_toBottomOf="@+id/all_friends"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/search_friend"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="110dp"
        android:layout_weight="1"
        android:backgroundTint="#FFEEF5"
        android:text="Search"
        android:textColor="#FF92c2"
        app:cornerRadius="20dp"
        app:fontFamily="@font/passero_one"
        app:layout_constraintBottom_toBottomOf="@+id/all_friends"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/add_friend_layout"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginBottom="90dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/misha_stills"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/add_friend_still"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/image_border"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_vector" />

            <Button
                android:id="@+id/cancel_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="135dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="19dp"
                android:layout_weight="1"
                android:backgroundTint="#FFEEF5"
                android:minHeight="48dp"
                android:text="Cancel"
                android:textColor="#FF92c2"
                app:cornerRadius="20dp"
                app:fontFamily="@font/passero_one"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/add_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="135dp"
                android:layout_marginEnd="134dp"
                android:layout_marginBottom="19dp"
                android:layout_weight="1"
                android:backgroundTint="#ff92c2"
                android:minHeight="48dp"
                android:text="Add Friend"
                android:textColor="#FFFF"
                app:cornerRadius="20dp"
                app:fontFamily="@font/passero_one"
                app:layout_constraintEnd_toEndOf="parent" />

        </RelativeLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>